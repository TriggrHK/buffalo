}

@model IEnumerable<string>
<div class="accordion-item mt-2">
    <h2 class="accordion-header" id="headingOne">
        <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
            <h5>Textile Color</h5>
            <i class="bi bi-chevron-down mx-auto"></i>
        </button>
    </h2>
    <div id="collapseOne" class="accordion-collapse collapse" aria-labelledby="headingOne" data-bs-parent="#accordionExample">
        <div class="accordion-body d-grid gap-2">
            @foreach (string t in Model)
            {
                <a asp-controller="Home" asp-action="Burials" asp-route-TColorFilter="@t" asp-route-pageNum="1"
                   class="btn @(ViewBag.SelectedTColor == t ? "btn-primary" : "btn-outline-secondary")">@t</a>
            }
        </div>
    </div>
</div>


